#!/usr/bin/make -f

export DH_VERBOSE=1

MFLAGS := -Daccess_checks=disabled

# Because Debian is Debian, we create a giant statically linked blob that
# contains all of our dependencies. We are also going to disable the plot and rt
# debug tools because Debian doesnt have a recent enough cairo, and we cant
# really link cairo / gtk statically.
MFLAGS += -Ddebug_tools=dump
MFLAGS += -Ddefault_library=static
MFLAGS += --wrap-mode=forcefallback

override_dh_auto_configure:
	dh_auto_configure -- $(MFLAGS)

override_dh_strip:
	dh_strip --no-automatic-dbgsym

%:
	dh $@
